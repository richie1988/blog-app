<!-- app/views/posts/new.html.erb -->
<%= form_with(model: [@current_user, @current_user.posts.build], url: user_posts_path(@current_user)) do |form| %>
  <div>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :text %>
    <%= form.text_area :text %>
  </div>

  <div>
    <%= form.submit 'Create Post' %>
  </div>
<% end %>
