<!-- app/views/posts/index.html.erb -->
<h1>List of Posts</h1>
<% if @posts.present? %>
  <ul>
    <% @posts.each do |post| %>
      <li>
        <%= link_to post.title, post_path(post) %>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>No posts found.</p>
<% end %>
<p><%= @placeholder_text %></p>
