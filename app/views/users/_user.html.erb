<section class="container-fluid mt-4 mb-4 user-<%= user&.id %>">
  <% if user.present? %>
    <div class="row g-0">
      <div class="col-md-4 photo-box">
        <% if user.photo.present? %>
          <img id="user-<%= user.id %>img" class="user-photo" src="<%= user.photo %>" alt="<%= "#{user.name}'s photo" %>">
        <% else %>
          <div class="placeholder-box"></div>
        <% end %>
      </div>

      <div class="col-md-8">
        <div class="user-info">
          <%= link_to user_path(user) do %>
            <h3 class="user-name"><%= user.name %></h3>
          <% end %>
          <%= link_to user_posts_path(user) do %>
            <p>Number of Posts: <%= user.posts.count %></p>
          <% end %>
        </div>
      </div>
    </div>
  <% else %>
    <p>User not found.</p>
  <% end %>
</section>
